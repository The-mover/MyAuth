<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/hero_bg80"
    android:padding="16dp"
    tools:context="com.ashthebest.myauth.UserDetailsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pro_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/photocamera"
        android:layout_marginBottom="30dp"
        app:civ_border_width="3dp"
        app:civ_border_color="#000000"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="20sp"
        android:drawablePadding="15dp"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/profile"
        android:textColor="@color/white"
        android:padding="8dp" />

    <TextView
        android:id="@+id/uva_handle_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Uva Handle"
        android:drawableLeft="@drawable/uva"
        android:textSize="20sp"
        android:drawablePadding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="8dp" />

    <TextView
        android:id="@+id/cf_handle_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CF Handle"
        android:drawableLeft="@drawable/cf"
        android:textSize="20sp"
        android:drawablePadding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="8dp" />

    <TextView
        android:id="@+id/codechef_handle_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codechef Handle"
        android:drawableLeft="@drawable/cc"
        android:textSize="20sp"
        android:drawablePadding="15dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="8dp" />

</LinearLayout>
